<body>
  <!-- Hero Section Begin -->
  {{! <section class="hero hero-normal">
    <div class="container">
      <div class="row">
        <div class="col-lg-3">
        </div>
        <div class="col-lg-9">
          <div class="hero__search">
            <div class="hero__search__form">
              <form action="#">
                <input type="text" placeholder="Nhập tên sản phẩm" />
                <button type="submit" class="site-btn">Tìm kiếm</button>
              </form>
            </div>
            <div class="hero__search__phone">
              <div class="hero__search__phone__icon">
                <i class="fa fa-phone"></i>
              </div>
              <div class="hero__search__phone__text">
                <h5>+65 11.188.888</h5>
                <span>Hỗ trợ 24/7</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section> }}
  <!-- Hero Section End -->

  <!-- Contact Section Begin -->
  <section
    class="contact spad"
    style="padding-top: 10px; !important; padding-bottom:10px; !important"
  >
    <div class="container">
      <div class="row">
        <div class="col-lg-3 col-md-3 col-sm-6 text-center">
          <div>
            <img
              src="https://image.shutterstock.com/image-illustration/shop-icon-on-white-background-600w-569649118.jpg"
            />
            <h4>{{shop.TEN_CUA_HANG}}</h4>
          </div>
        </div>
        <div class="col align-self-center">
          <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-6 text-center">
              <span class="icon_phone"></span>
              <h4>SĐT</h4>
              <p>{{shop.SDT}}</p>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-6 text-center">
              <span class="icon_pin_alt"></span>
              <h4>Địa chỉ</h4>
              <p>{{shop.DIA_CHI}}</p>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-6 text-center">
              <span class="icon_mail_alt"></span>
              <h4>Email</h4>
              <p>{{shop.EMAIL}}</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- Contact Section End -->
  <!-- Shop Product List Section Begin -->
  <section class="product-details spad" style="padding:10px; !important">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="section-title">
            <h2>Danh sách sản phẩm</h2>
          </div>
          {{! <div class="featured__controls">
            <ul>
              <li class="active" data-filter="*">All</li>
              <li data-filter=".fresh-meat">Fresh Meat</li>
              <li data-filter=".vegetables">Vegetables</li>
            </ul>
          </div> }}
        </div>
      </div>
      <div class="row featured__filter">
        {{#each products}}
          <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
            <div class="featured__item">
              <div class="featured__item__pic set-bg" data-setbg="{{this.ANH}}">
                <ul class="featured__item__pic__hover">
                  <li><a href="/addcart/{{this.MA_SP}}"><i
                        class="fa fa-shopping-cart"
                      ></i></a></li>
                </ul>
              </div>
              <div class="featured__item__text">
                <h6><a
                    href="/item-detail/{{this.MA_SP}}"
                  >{{this.TEN_SP}}</a></h6>
                <h5>{{this.GIA_SP}}</h5>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </section>
  <!-- Shop Product List Section End -->
</body>