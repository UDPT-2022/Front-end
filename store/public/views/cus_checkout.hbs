<body>
  <!-- Breadcrumb Section Begin -->
  <section class="breadcrumb-section set-bg" data-setbg="img/breadcrumb.jpg">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <div class="breadcrumb__text">
            <h2>Thanh toán</h2>
            <div class="breadcrumb__option">
              <a href="/">Trang chủ</a>
              <span>Thanh toán</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- Breadcrumb Section End -->

  <!-- Checkout Section Begin -->
  <section class="checkout spad">
    <div class="container">

      <div class="checkout__form">
        <h4>Thông tin đặt hàng</h4>
        <form action="/checkout" method="post">
          <input type="hidden" id="TONG_TIEN" name="TONG_TIEN" value="" />
          <input
            type="hidden"
            id="MA_NGUOI_DUNG"
            name="MA_NGUOI_DUNG"
            value="{{user.id}}"
          />
          <div class="row">
            <div class="col-lg-8 col-md-6">
              <div class="row">
                <div class="col">
                  <div class="checkout__input">
                    <p>Họ và tên<span>*</span></p>
                    <input type="text" name="HO_TEN" />
                  </div>
                </div>
              </div>

              <div class="checkout__input">
                <p>Địa chỉ<span>*</span></p>
                <input
                  type="text"
                  placeholder="Địa chỉ nhận hàng"
                  class="checkout__input__add"
                  name="DIA_CHI"
                />
              </div>

              <div class="row">
                <div class="col-lg-6">
                  <div class="checkout__input">
                    <p>SĐT<span>*</span></p>
                    <input type="text" name="SDT" />
                  </div>
                </div>
                <div class="col-lg-6">
                  <div class="checkout__input">
                    <p>Email<span>*</span></p>
                    <input type="text" value="{{user.email}}" name="EMAIL" />
                  </div>
                </div>
              </div>

              <div class="checkout__input">
                <p>Ghi chú thêm<span>*</span></p>
                <input
                  type="text"
                  placeholder="Ghi chú cho người bán tại đây"
                  name="GHI_CHU"
                  value="Ghi chú cho người bán"
                />
              </div>
            </div>
            <div class="col-lg-4 col-md-6">
              <div class="checkout__order">
                <h4>Hoá đơn</h4>
                <div class="checkout__order__products">Sản phẩm
                  <span>Giá tiền</span></div>
                <ul>
                  {{#each products}}
                    <li>{{this.TEN_SP}}<span
                        class="shopping__checkout__total"
                      >{{this.total}}</span></li>
                  {{/each}}
                </ul>
                <div class="checkout__order__total" id="totalCheckout">
                </div>

                <button type="submit" class="site-btn" onclick="tongtien();">Đặt
                  hàng</button>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </section>
  <!-- Checkout Section End -->
  <script>
    const cTotal = document.querySelector('#totalCheckout'); let cartTotal = 0;
    let price = 0; let a = []; hi =
    document.getElementsByClassName("shopping__checkout__total"); for (let i =
    0; i < hi.length; i++) { a.push(parseInt(hi[i].textContent)); }; for (let i
    = 0; i < a.length; i++) { cartTotal = cartTotal + a[i]; }; TotalHTML =
    "Tổng" + " tiền <span id = \"tongtien\">" + cartTotal + "</span>";
    cTotal.innerHTML = TotalHTML; var tongtien = () => {
    document.getElementById("TONG_TIEN").value =
    document.getElementById("tongtien").textContent };
  </script>
</body>