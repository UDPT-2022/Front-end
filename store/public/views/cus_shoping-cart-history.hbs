<body>

  <!-- Hero Section Begin -->
  <section class="hero hero-normal">
    <div class="container">

    </div>
  </section>
  <!-- Hero Section End -->

  <!-- Breadcrumb Section Begin -->
  <section class="breadcrumb-section set-bg" data-setbg="img/breadcrumb.jpg">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <div class="breadcrumb__text">
            <h2>Lịch sử mua hàng</h2>
            <div class="breadcrumb__option">
              <a href="/">Home</a>
              <span>Lịch sử mua hàng</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- Breadcrumb Section End -->

  <!-- Shoping Cart Section Begin -->
  <section class="shoping-cart spad">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="shoping__cart__table">
            <table>
              <thead>
                <tr>
                  <th>Mã đơn hàng</th>
                  <th>Tổng tiền</th>
                  <th>Thời gian đặt hàng</th>
                  <th>Địa điểm nhận hàng</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                {{#each orders}}
                  <tr>
                    <td>
                      <a href="/order/{{this.MA_DON_HANG}}">
                        <h5>{{this.MA_DON_HANG}}</h5>
                      </a>
                    </td>
                    <td>
                      {{this.TONG_TIEN}}
                    </td>

                    <td>
                      {{dateFormat this.created_at "DD/MM/YYYY h:mm A"}}
                    </td>
                    <td>
                      {{this.DIA_CHI}}
                    </td>
                    <td class="shoping__cart__item__close">
                      <a href="/order/{{this.MA_DON_HANG}}">Chi tiết</a>
                    </td>
                  </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
      {{! <div class="row">
        <div class="col-lg-12">
          <div class="shoping__cart__btns">
            <a href="#" class="primary-btn cart-btn cart-btn-right"><span
                class="icon_loading"
              ></span>
              Cập nhật</a>
          </div>
        </div>
        <div class="col-lg-6">

        </div>
        <div class="col-lg-6">
          <div class="shoping__checkout">
            <h5>Tổng chi</h5>
            <ul>
              <li><span>$454.98</span></li>
            </ul>
          </div>
        </div>
      </div> }}
    </div>
  </section>
  <!-- Shoping Cart Section End -->

</body>