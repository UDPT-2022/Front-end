<div id="menu">
  <div class="hero__search__form">
    <form action="/search">
      <input type="text" id="q" name="q" class="form-control" placeholder="Tìm kiến sản phẩm" value="{{value}}">
      <button type="submit" class="btn btn-primary bt-add">Tìm kiếm</button>
    </form>
  </div>
  <ul class="ListMenu">
    <li>
    </li>
  </ul>
  <a href="/create" class="btn btn-success bt-add">Thêm sản phẩm</a>
  <a href="/order" class="btn btn-success bt-add">Đơn hàng</a>
</div>
<div id="content">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th class="shoping__product">Tên sản phẩm</th>
        <th>Giá</th>
        <th>Số lượng</th>
        <th>Thành tiền</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each order.CHI_TIET_DON_HANG}}
      <tr>
        <td class="shoping__cart__item">
          <img src="{{this.ANH}}" alt="" id="img-cart" />
          <a href="/item-detail/{{this.MA_SP}}">
            <h5>{{this.TEN_SP}}</h5>
          </a>
        </td>
        <td class="shoping__cart__price">
          {{this.DON_GIA}}
        </td>
        <td class="shoping__cart__quantity">
          <span>{{this.SO_LUONG}}</span>
        </td>
        <td class="shoping__cart__total">
          {{this.GIA}}
        </td>
      </tr>
      {{/each}}
      <tr>
        <td></td>
        <td></td>
        <td>Tổng tiền:</td>
        <td>
          {{order.TONG_TIEN}}
        </td>
      </tr>
    </tbody>

  </table>
</div>

